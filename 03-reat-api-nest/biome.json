{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignoreUnknown": true,
		"ignore": ["dist", "node_modules", "coverage"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"quoteProperties":"preserve",
			"indentStyle": "space",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"trailingCommas": "none"
		}
	}
}
